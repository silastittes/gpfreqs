    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'gpfreqs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gpfreqs",
                    "--package=gpfreqs",
                ],
                "filter": {
                    "name": "gpfreqs",
                    "kind": "bin"
                }
            },
            "args": ["-v", "example_data/small.vcf.gz", 
                    "-p",  "example_data/pop_key.txt",],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'gpfreqs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=gpfreqs",
                    "--package=gpfreqs"
                ],
                "filter": {
                    "name": "gpfreqs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}